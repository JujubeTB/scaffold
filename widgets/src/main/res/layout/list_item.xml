<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp">

    <ImageView
        android:contentDescription="@string/dummy_content"
        android:id="@+id/id_treenode_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/tree_econpand" />
    
    <CheckBox
        android:id="@+id/id_treeNode_check"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/id_treenode_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/id_treenode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/id_treeNode_check"
        android:text="@string/app_name"
        android:textSize="16sp" />

</RelativeLayout>